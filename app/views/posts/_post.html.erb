<div class="posts-wrapper row">
  <div class="post">
      <div class="post-head">
        <div class="thumb-img">
          <div class="user-name">
  	      <%= link_to post.user.user_name, profile_path(post.user.user_name) %>
          </div>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <div class="post-bottom">
        <%= render 'posts/likes', post: post %>
        <div class="caption">
          <%= post.caption %>
        </div>
        <div class="time-ago">
          <%= time_ago_in_words(post.created_at) %>
        </div>
        <div class="comments" id="comments_#{post.id}">
          <% if post.comments %>
            <%= render post.comments, post: post %>
          <% end %>
        </div>
        <div class="comment-like-form row">
          <div class="col-sm-1">
            <%= link_to '', like_post_path(post.id), remote: true, id: "like#{post.id}", class: "glyphicon glyphicon-heart-empty" %>
          </div>
          <div class="comment-form col-sm-11">
            <%= form_for [post, post.comments.build] do |f| %>
                <%= f.text_field :content, placeholder: 'Add a comment:', class: "comment_content", id: "comment_content_#{post.id}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>