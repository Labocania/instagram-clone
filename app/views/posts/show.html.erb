<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        <%= current_user.user_name %>
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image(:medium) %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
  </div>
</div>
<div class="text-center edit-links">
  <%= link_to "Back", posts_path %>
  |
  <%= link_to "Edit post", edit_post_path(@post) %>
</div>
